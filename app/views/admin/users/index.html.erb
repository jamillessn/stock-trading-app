
<h2>All Users List</h2>

  <% if not @users.any? %>
  <p class="text-center">No registered users yet. </p>
  <% else %>
<table class="text-center m-5 text-sm text-surface">
  <thead class="border-b border-neutral-200 font-medium " >
    <tr class="text-center">
      <th>Name</th>
      <th>Email</th>
      <th>Approved</th>
      <th>Balance</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody class="m-3">
    <% @users.each do |user| %>
      <tr>
        <td class="whitespace-nowrap px-6 py-4"><%= user.first_name %> <%= user.last_name %></td>
        <td><%= user.email %></td>
        <td style="text-transform: uppercase;"><%= user.approved %></td>
        <td style="text-transform: uppercase;"><%= user.default_balance %></td>
        <td class="flex justify-center gap-5 whitespace-nowrap px-6 py-4">
          <%= link_to "Show", admin_user_path(user) %>
          <%= link_to "Edit", edit_admin_user_path(user) %> 
          <%= button_to "Delete", admin_user_path(user.id), method: :delete, data: { confirm: "Are you sure?" } %>
       </td>

        <%if not user.approved? %>
        <td>
        <%= button_to "Approve", approve_user_admin_user_path(user.id), class:"px-4 py-1 text-white font-light tracking-wider bg-gray-900 rounded"  %>
        </td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>


<%= button_to "Add a New Trader", new_admin_user_path, method: :get, class: "prim-btn-2" %>


</div>