<h2> Add a User </h2>
<%= form_with model: [ :admin, @user] do |f| %>
  <div class="mb-3 ">
    <%= f.label :first_name, class: "block text-sm text-gray-600" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "off", class: "px-5 py-1 text-gray-700 bg-gray-200 rounded" %>
     <%= f.label :last_name, class: "block text-sm text-gray-600" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "off", class: "px-5 py-1 text-gray-700 bg-gray-200 rounded" %>
  
  
    <%= f.label :email, class: "block text-sm text-gray-600" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "off", class: "px-5 py-1 text-gray-700 bg-gray-200 rounded" %>
  
  
    <%= f.label :password, class: "block text-sm text-gray-600" %>
    <%= f.password_field :password, autocomplete: "off", class: "px-5 text-gray-700 bg-gray-200 rounded" %>
  </div>

  <div class="actions d-flex justify-content-center mt-6">
    <%= f.submit "Create User", class: "py-2 px-6 bg-blue-500 hover:bg-blue-600 text-sm text-white font-bold rounded-xl transition duration-200" %>
  </div>

<% end %>


  <span class="actions d-flex justify-content-center mt-6">
    <%= link_to "Go back to Dashboard", admin_users_path %>
  </span>
