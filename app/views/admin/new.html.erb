<%= form_with model: [ :admin, @user] do |f| %>
<form class="p-10 bg-white rounded shadow-xl">
  <div class="mb-3">
    <%= f.label :email, class: "block text-sm text-gray-600" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "off", class: "w-full px-5 py-1 text-gray-700 bg-gray-200 rounded" %>
  </div>
  <div class="mb-3">
    <%= f.label :password, class: "form-label" %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
