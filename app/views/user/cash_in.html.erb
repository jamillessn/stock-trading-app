<div class="max-w-md mx-auto mt-10 p-6 bg-white border border-gray-200 rounded-lg shadow-md dark:bg-gray-800 dark:border-gray-700">
  <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Cash In</h2>
  
  <%= form_with(url: update_balance_user_path(current_user), method: :patch, local: true) do |f| %>
    <div class="mb-4">
      <%= f.label :cash_in_amount, "Enter Amount", class: "block text-sm font-medium text-gray-700 dark:text-gray-400" %>
      <%= f.number_field :cash_in_amount, step: "0.01", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-indigo-500 dark:focus:border-indigo-500", required: true %>
    </div>
    <div class="mb-4">
      <%= f.submit "Cash In", class: "w-full px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50" %>
    </div>
  <% end %>

  <% if flash[:error] %>
    <div class="text-red-600">
      <%= flash[:error] %>
    </div>
  <% end %>

  <% if flash[:notice] %>
    <div class="text-green-600">
      <%= flash[:notice] %>
    </div>
  <% end %>
</div>