<h2 class="text-center">Add Balance</h2>
<div class="flex justify-center">
  <%= form_with model: @user, url: update_balance_path(@user), method: :post, html: { class: "form-basic" } do |form| %>
    <div class="mb-4">
      <%= form.label "Enter Amount:", class: "block text-sm font-medium text-gray-700 dark:text-gray-400" %>
      <%= form.number_field :cash_in_amount, class: "block w-full mt-1 text-sm font-medium", max: 10000 %>
    </div>

    <div class="mb-4 text-center">
      <%= form.submit "Confirm", class: "px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-opacity-50" %>
    </div>

    <div class="mb-4 text-center">
      <%= button_to "Back to Portfolio Page", user_portfolio_path(@user), method: :get, class: "px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-opacity-50" %>
    </div>
  <% end %>
</div>
